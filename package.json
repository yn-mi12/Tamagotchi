{
  "name": "Tamagotchi",
  "displayName": "Tamagotchi",
  "description": "Your virtual pet",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./src/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "Tamagotchi.view",
          "name": "Tamagotchi"
        }
      ]
    },
    "commands": [
      {
        "command": "Tamagotchi.hello",
        "title": "Tamagotchi: Hello World"
      },
      {
        "command": "Tamagotchi.create",
        "title": "Tamagotchi: Create Tamagotchi"
      },
      {
        "command": "Tamagotchi.delete",
        "title": "Tamagotchi: Delete Tamagotchi"
      },
      {
        "command": "Tamagotchi.play",
        "title": "Tamagotchi: Play with Tamagotchi"
      },
      {
        "command": "Tamagotchi.feed",
        "title": "Tamagotchi: Feed Tamagotchi"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0"
  },
  "dependencies": {
    "canvas": "^3.2.0"
  }
}
